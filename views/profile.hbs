<div class='profile-view'>
  <div class='profile-header'>
    {{#if user.name}}
      <h1>Hello {{user.name}}</h1>
    {{else}}
      <h1> Hello Ironhacker!</h1>
    {{/if}}
  </div>
  <main class='profile-container'>
    <div class='profile-settings'>
      <h2>Account Settings</h2>
      <p>User role: {{user.role}}</p>
      <form
        action='/users/update/{{user._id}}'
        id='username'
        method='post'
        enctype='multipart/form-data'
        class='edit-profile-form'
      >
        <div class='profile-form-group'>
          <label for='username'>Username</label>
          <input
            type='text'
            id='username'
            name='name'
            class='edit-profile-input'
            value={{#if user.name}}{{user.name}}
    {{else}}
    'Ironhacker'
    {{/if}}
          />
        </div>
        <div class='profile-form-group'>
          <label for='email'>Email</label>
          <input
            type='email'
            id='email'
            class='edit-profile-input'
            name='email'
            value={{user.email}}
            required
          />
        </div>
        <div class='profile-form-group profile-image'>
          <img
            src={{user.image}}
            alt={{user.name}}
            class='user-profile-image'
          />
          <input
            type='file'
            accept="image/*"
            name='user-profile-image'
            id='imageInput'
            class='profile-image-input'
          />
          <label for='imageInput'>Choose a new image</label>
        </div>
        <button type='submit' class='profile-form-btn'>Save Changes</button>
      </form>
    </div>
    <div class='profile-bookings'>
      <h2>Your bookings</h2>
      {{#each user.bookedTours}}
        <h4>Name: {{user.name}}</h4>
        <p>Description: {{user.description}}</p>
        <img src='{{user.image}}' alt='' />
        <p>Tour guide: {{user.tourGuide.name}}</p>
      {{/each}}
    </div>
  </main>
</div>